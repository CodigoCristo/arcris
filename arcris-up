#!/bin/bash
clear
git clone https://github.com/CodigoCristo/arcris
cd arcris/
chmod +777 Arcris
chmod +777 arcris-up


sleep 3 & PID=$! #simulate a long process
clear
echo -e '\033[44;1m'
echo " CARGANDO... "
echo ""
printf "["
# While process is running...
while kill -0 $PID 2> /dev/null; do 
    printf  "â–“"
    sleep 0.1
done
printf "]\n\n Hecho por Codigo Cristo! \n"
echo ""
echo -e ' https://github.com/CodigoCristo \033[m'
echo ""

cp .dialogrc ~/.dialogrc
cp Arcris /bin/arcris
cp arcris-up /bin/arcris-up

cd ..
rm -r arcris
sleep 3
clear
arcris

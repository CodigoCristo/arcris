                      GPUvirt="qemu-ga"
                      VMqemu=true
                      dialog --title "-| Driver de Vídeo |-" --stdout --ok-label "<Instalar>"  --msgbox "\nVídeo Detectado Qemu\nInstalar: $GPU" 8 80                   
                ;;

